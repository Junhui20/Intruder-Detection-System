# Intruder Detection System Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SECURITY SETTINGS (REQUIRED)
# =============================================================================

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Optional: Specific chat ID for notifications
# TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# DETECTION SETTINGS (OPTIONAL)
# =============================================================================

# Confidence thresholds (0.0 to 1.0)
# HUMAN_CONFIDENCE_THRESHOLD=0.6
# ANIMAL_CONFIDENCE_THRESHOLD=0.6
# YOLO_CONFIDENCE=0.5

# Pet identification threshold
# PET_IDENTIFICATION_THRESHOLD=0.7

# Face recognition settings
# MAX_FACES_PER_FRAME=10

# =============================================================================
# PERFORMANCE SETTINGS (OPTIONAL)
# =============================================================================

# System resource limits
# MAX_CPU_USAGE=80.0
# MAX_MEMORY_USAGE=4096
# ENABLE_GPU=true

# Video processing
# FRAME_WIDTH=640
# FRAME_HEIGHT=480
# TARGET_FPS=30

# =============================================================================
# CAMERA SETTINGS (OPTIONAL)
# =============================================================================

# Camera connection settings
# CAMERA_CONNECTION_TIMEOUT=2
# CAMERA_BUFFER_SIZE=1

# =============================================================================
# NOTIFICATION SETTINGS (OPTIONAL)
# =============================================================================

# Notification timing
# NOTIFICATION_COOLDOWN=20
# UNKNOWN_PERSON_TIMER=5
# UNFAMILIAR_ANIMAL_TIMER=5

# Photo settings
# SEND_PHOTOS=true
# PHOTO_QUALITY=85

# =============================================================================
# DATABASE SETTINGS (OPTIONAL)
# =============================================================================

# Database configuration
# DATABASE_PATH=detection_system.db
# BACKUP_INTERVAL=3600
# MAX_BACKUP_FILES=10

# =============================================================================
# LOGGING SETTINGS (OPTIONAL)
# =============================================================================

# Logging configuration
# LOG_LEVEL=INFO
# LOG_TO_FILE=true
# LOG_FILE_PATH=logs/detection_system.log
# MAX_LOG_FILE_SIZE=10
# MAX_LOG_FILES=5

# =============================================================================
# DEVELOPMENT SETTINGS (OPTIONAL)
# =============================================================================

# Debug mode
# DEBUG_MODE=false

# Performance monitoring
# ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 
# 1. Copy this file to .env in the same directory
# 2. Fill in at least the TELEGRAM_BOT_TOKEN
# 3. Uncomment and modify any other settings you want to override
# 4. The .env file will be automatically loaded by the application
# 5. Environment variables take precedence over config.yaml settings
#
# Security Note: Never commit the .env file to version control!
# The .env file should be added to .gitignore
